#include <stdio.h>
#include <stdlib.h>
#include "config.h"
#include "LiquidCrystal.h"

# define _XTAL_FREQ 1000000 
# define SWITCH1 PORTBbits.RB0
# define SWITCH2 PORTBbits.RB1
# define SWITCH3 PORTBbits.RB2

int main() 
{
    ADCON1 = 0xFF;
    // Data pins connected to PORTC
    TRISC = 0x00; 
    // RS = RD0, RW = RD1, E  = RD2
    TRISD = 0x00;
    // connect the LCD pins to the appropriate PORT pins
    TRISB = 0x07; 
    
    pin_setup(&PORTC, &PORTD);
    // initialize the LCD to be 16x2 (this is what I have, yours might be different)
    begin(16, 2, LCD_5x8DOTS);
    
    //home();
    int num = 0;
    int stopIncrement = 0;
    while (1) {
        if (SWITCH1 == 0) {
            home();
            num++;
            stopIncrement++;
            print_int(num);
            print("      ");
        __delay_ms(500);
           // return num;
        }
            else if (SWITCH1 == 1) {
                home();
                print_int(stopIncrement);
            } 
        if (SWITCH2 == 0) {
            home();
            num--;
            stopIncrement--;
            print_int(num);
            print("      ");
            __delay_ms(500);
        }
            else if (SWITCH2 == 1) {
                home();
                print_int(stopIncrement);
    }
        if (SWITCH3 == 0) {
            home();
            num = 0;
            stopIncrement = 0;
            print_int(num);
            print("     ");
        } 
            else if(SWITCH3 == 1) {
                home();
                print_int(stopIncrement);
                print("      ");
        }
             }
  

    }
    
